.header
  .header__var
    %a{ href: "/", class: "header__var__logo" }
    .header__var__travel
      .header__var__travel__search
        %i.fa.fa-search
        %input{ placeholder: "企画を探そう！", type: 'text'}
    .header__var__nav
      .header__var__nav__mylist
        %i.fa.fa-briefcase リスト
      .header__var__nav__message
        %i.fa.fa-comment-o メッセージ
      .header__var__nav__notification
        %i.fa.fa-bell 通知
      .header__var__nav__user
        #user-info
          %i.fa.fa-user-o
            ユーザー
        #user-tab
          = link_to edit_user_registration_path do
            ユーザー情報編集
          %br
          = link_to user_path(@user) do
            企画編集
